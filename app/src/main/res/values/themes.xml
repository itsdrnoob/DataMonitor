<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataMonitor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:overScrollMode">never</item>
        <item name="snackbarStyle">@style/Theme.SnackBar</item>
        <item name="snackbarTextViewStyle">@style/Theme.SnackBar.Text</item>
    </style>

    <style name="ThemeOverlay.DataUsage.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="NoMultiTouch" parent="Theme.DataMonitor">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.License" parent="Theme.MaterialComponents.DayNight">
        <item name="actionBarStyle">@style/LicenseActionBar</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/surface</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="LicenseActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/surface</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="Theme.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.SnackBar.Text" parent="Widget.MaterialComponents.Snackbar.TextView">
        <!-- Left empty because otherwise text will be @color/text_primary -->
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:statusBarColor">@color/surface</item>
    </style>
</resources>